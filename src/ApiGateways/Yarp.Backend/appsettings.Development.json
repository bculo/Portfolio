{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ApplicationOptions": {
    "Name": "Yarp.Backend"
  },
  "ReverseProxy": {
    "Routes": {
      "crypto-grpc-route" : {
        "ClusterId": "crypto-grpc-cluster",
        "Match": {
          "Path": "crypto-grpc/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "crypto-grpc-cluster": {
        "HttpRequest": {
          "Version": "2",
          "VersionPolicy": "RequestVersionExact"
        },
        "Destinations": {
          "crypto-grpc-cluster/destination1": {
            "Address": "http://localhost:5098/"
          }
        }
      }
    }
  }
}
